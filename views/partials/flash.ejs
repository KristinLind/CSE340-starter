<% if (flash) { %>
    <% if (flash.success && flash.success.length) { %>
        <div class="flash flash--success" role="status" aria-live="polite">
            <%= flash.success[0] %>
        </div>
        <% } %>

            <% if (flash.error && flash.error.length) { %>
                <div class="flash flash--error" role="alert" aria-live="assertive">
                    <%= flash.error[0] %>
                </div>
                <% } %>

                    <% if (flash.info && flash.info.length) { %>
                <div class="flash flash--info" role="status" aria-live="polite">
                    <%= flash.info[0] %>
        </div>
    <% } %>
<% } %>